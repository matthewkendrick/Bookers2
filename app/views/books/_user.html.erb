<h2>User info</h2>
  <%= render 'books/attachment' %>
<table class="table">
  <tbody>
    <tr>
      <th><h4>name</h4></th>
      <th><p><%= @user.name %></p></th>
    </tr>
    <tr>
      <th><h4>introduction</h4></th>
      <th><p><%= @user.introduction %></p></th>
    </tr>
  </tbody>
</table>
<div class="row">
    <%= link_to edit_user_path(current_user), class: "btn btn-outline-secondary btn-block" method: :get do %>
        <i class="fas fa-user-cog"></i>
    <% end %>
</div>
      