<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%# User info %>
        <%= render 'users/user', user: @user, book: @book %>
      <%# New Book %>
        <%= render 'books/new', book: @book %>
    </div>  
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <th>
                <td>
                  <%= render 'users/attachment' %>
                </td>
                <td><%= user.name %></td>
                <td><%= link_to "Show", user_path(user.id) %></td>
              </th>
            </tr> 
          <% end %>
        </<tbody>>
      </table>
    </div>
  </div>
</div>